pipeline {
    agent {
        docker {
            image 'node:16-alpine'
            label 'docker' // Optional: Specify a label if needed
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Building the application..."'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Running tests..."'
            }
        }
    }
}
